<h2>Farms</h2>
 
<div>
    <% @allfarms.each do |farm| %>
    <div class = "farm-row center">
        <img class = 'farm-icon icon' src = "/assets/farm.jpg">
        <div class = "farm-name">
            <%= farm.title %></td>
        </div>
        <div class = "farm-row-right">
            <%= link_to farm_path(farm),
                    class: "small-button button center" do %>
                <h3 class = "small-button-text"> Let's go! </h3>
            <% end %>
            <%= link_to edit_farm_path(farm),
                    class: "small-button button center" do %>
                <h3 class = "small-button-text"> Rename </h3>
            <% end %>
            <%= link_to farm_path(farm),
                    class: "small-button button center",
                    method: :delete,
                    data: { confirm: 'Are you sure?' } do %>
                <h3 class = "small-button-text"> Delete </h3>
            <% end %>
        </div>
    </div>
    <% end %>
</div>

<%= link_to new_farm_path, class: "med-button button center", id: "new_farm_button" do %>
    <h3 class = "med-button-text"> New Farm </h3>
<% end %>

<%= link_to root_url, class: "med-button button center", id: "back_button" do %>
    <h3 class = "med-button-text"> Back </h3>
<% end %>
